<h1>New Request</h1>

<% if @cat_rental_request.persisted? %>
<% url = cat_rental_request_url(@cat_rental_request) %>
<% else %>
<% url = cat_rental_requests_url %>
<% end %>

<form action='<%= url %>' method="post">
  <% if @cat_rental_request.persisted?  %>
    <input type='hidden' name='_method' value='patch'>
  <% end %>

  <label for='start_date'>Start Date</label>
  <input id='start_date' name="cat_rental_request[start_date]" type='date' value= <%= @cat_rental_request.start_date %> >
  <br><br>
  <label for='end_date'>End Date</label>
  <input id='end_date' name="cat_rental_request[end_date]" type='date' value= <%= @cat_rental_request.end_date %> >

  <br><br>
  <label for='cat_id'>Kitty ID</label>
  <input id='cat_id' type='text'  name="cat_rental_request[cat_id]" value= <%= @cat_rental_request.end_date %> >

  <input type="submit" value= <%= @cat_rental_request.persisted? ? "Edit_request" : "Submit_request" %> >




</form>
